<html>
<% include ./partials/head %>
<body>

  <div class="row" ng-app="anony">
    <div class="content-box">
      <div id="login-box">
        <div id="login-box-align">
          <div id="login-box-content" ng-controller="loginControl" ng-cloak>
            <form>
              <table class="table table-borderless">
                <tr>
                  <td>Email</td>
                  <td>
                    <md-tooltip md-direction="right">Input your email address</md-tooltip>
                    <input type="email" placeholder="anony@example.com" title="Email Form" ng-model="user_email" style="width:100%;">
                  </td>
                </tr>
                <tr>
                  <td>Password</td>
                  <td>
                    <md-tooltip md-direction="right">Input your password</md-tooltip>
                    <input type="password" pattern="^.{8,}$" title="more than 8 characters" placeholder="more than 8 characters" ng-model="user_pwd" style="width:100%;">
                  </td>
                </tr>
              </table>

              <button type="button" class="btn btn-default btn-theme-color" style="width:100%; margin-bottom:20px;" ng-click="signIn()">Login in</button>
              <div class="seperator"></div>
              <button type="button" class="btn btn-default" style="width:100%; margin-bottom:20px;" ng-click="signUp()">Create Account</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


  <% include ./partials/script.ejs %>

</body>
</html>
